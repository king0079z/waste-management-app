{
  "name": "autonautics-waste-management-system",
  "version": "1.0.0",
  "description": "AI-Powered Smart Waste Management System with Real-time GPS Tracking and Analytics",
  "main": "app.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "dev:live": "live-server --port=8080 --watch=*.js,*.css,*.html",
    "build": "webpack --mode production",
    "build:dev": "webpack --mode development",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint *.js",
    "lint:fix": "eslint *.js --fix",
    "format": "prettier --write \"*.{js,css,html,json}\"",
    "serve": "http-server -p 8080 -c-1",
    "serve:dist": "cd dist && http-server -p 8080",
    "watch": "nodemon --watch *.js --watch *.css --exec npm run dev:live",
    "clean": "rm -rf dist node_modules package-lock.json",
    "migrate:mongo": "node mongodb-migration.js",
    "verify:migration": "node verify-migration.js",
    "backup:json": "node backup-utility.js json",
    "backup:mongo": "node backup-utility.js mongo",
    "backup:all": "node backup-utility.js all",
    "backup:list": "node backup-utility.js list"
  },
  "keywords": [
    "waste-management",
    "iot",
    "gps-tracking",
    "smart-city",
    "recycling",
    "paper-bins",
    "fleet-management",
    "real-time-monitoring",
    "machine-learning",
    "route-optimization"
  ],
  "author": "Autonautics",
  "license": "MIT",
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.4.0",
    "chart.js": "^4.4.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "html2canvas": "^1.4.1",
    "jspdf": "^2.5.1",
    "leaflet": "^1.9.4",
    "mongodb": "^6.3.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@babel/core": "^7.23.3",
    "@babel/preset-env": "^7.23.3",
    "babel-loader": "^9.1.3",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "css-minimizer-webpack-plugin": "^5.0.1",
    "eslint": "^8.54.0",
    "html-webpack-plugin": "^5.5.3",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "live-server": "^1.2.2",
    "nodemon": "^3.0.1",
    "prettier": "^3.1.0",
    "style-loader": "^3.3.3",
    "terser-webpack-plugin": "^5.3.9",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/autonautics/waste-management-system.git"
  },
  "bugs": {
    "url": "https://github.com/autonautics/waste-management-system/issues"
  },
  "homepage": "https://github.com/autonautics/waste-management-system#readme",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
