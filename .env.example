# Waste Management System - Environment Configuration
# Copy this file to .env and update the values

# Application Settings
NODE_ENV=production
PORT=3000
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# Database Configuration
# Set DATABASE_TYPE to 'mongodb' to use MongoDB, or 'json' for file-based storage
DATABASE_TYPE=mongodb
DB_TYPE=mongodb

# MongoDB Configuration (use MongoDB Atlas connection string for production/Vercel)
# Get your URI from: MongoDB Atlas → Cluster → Connect → Connect your application
MONGODB_URI=mongodb+srv://<user>:<password>@cluster0.xxxxx.mongodb.net/?retryWrites=true&w=majority
MONGODB_URL=mongodb+srv://<user>:<password>@cluster0.xxxxx.mongodb.net/?retryWrites=true&w=majority
MONGODB_DATABASE=waste_management

# PostgreSQL Configuration (alternative)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=waste_management_prod
DB_USERNAME=waste_admin
DB_PASSWORD=your-secure-database-password
DB_SSL=false

# Redis Configuration (optional, for session storage)
REDIS_URL=redis://localhost:6379

# Security Settings
JWT_SECRET=your-jwt-secret-key-change-this-in-production
BCRYPT_ROUNDS=12

# External Services
MAP_API_KEY=your-leaflet-or-mapbox-api-key
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password

# Findy IoT API Configuration (for sensor integration)
# IMPORTANT: Use single quotes for password if it contains # or other special characters
FINDY_API_URL=https://uac.higps.org
FINDY_API_KEY=BEdRCeAZ8Wog47s5YpBhu0ZZV4hLrsV1234
FINDY_SERVER=findyIoT_serverApi
FINDY_API_USERNAME=your-findy-username
FINDY_API_PASSWORD='your-findy-password'

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# GPS Tracking Settings
GPS_UPDATE_INTERVAL=5000
DRIVER_LOCATION_TIMEOUT=30000

# Map Settings
MAP_DEFAULT_ZOOM=13
MAP_CENTER_LAT=40.7128
MAP_CENTER_LNG=-74.0060

# File Upload Settings
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Backup Settings
BACKUP_INTERVAL=86400000
BACKUP_RETENTION_DAYS=30